<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#15151E"
    tools:context=".DetallePilotoActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/imageViewDetallePiloto"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:srcCompat="@drawable/placeholder_image"
            android:contentDescription="@string/descripcion_imagen_piloto" /> <!-- Considera usar strings para contentDescription -->

        <TextView
            android:id="@+id/textViewDetalleNombrePiloto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
            android:textColor="@android:color/white"
            app:layout_constraintTop_toBottomOf="@id/imageViewDetallePiloto"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Nombre del Piloto" />

        <TextView
            android:id="@+id/textViewLabelEstadisticas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/label_estadisticas"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            android:textColor="@android:color/white"
            app:layout_constraintTop_toBottomOf="@id/textViewDetalleNombrePiloto"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textViewDetalleEstadisticasPiloto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            android:textColor="@android:color/white"
            app:layout_constraintTop_toBottomOf="@id/textViewLabelEstadisticas"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Victorias: 10\nPoles: 5\nCampeonatos: 2" />

        <TextView
            android:id="@+id/textViewLabelDescripcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/label_descripcion"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            android:textColor="@android:color/white"
            app:layout_constraintTop_toBottomOf="@id/textViewDetalleEstadisticasPiloto"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textViewDetalleDescripcionPiloto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            android:textColor="@android:color/white"
            app:layout_constraintTop_toBottomOf="@id/textViewLabelDescripcion"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"
            tools:text="Descripción detallada del piloto, su carrera, logros importantes y cualquier otra información relevante que se quiera mostrar al usuario." />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>